<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="container-fluid">
	    <div class="navbar-header">
	         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	            <span class="sr-only">Toggle navigation</span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	        	<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="/">Peoplr</a>
	    </div>

	    <div id="navbar" class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
	          	<li><%= link_to "about", "/about" %></li>
	       		<li><%= link_to "spread a word", "/spread" %></li>
	        </ul>

	    	<div class="row">
	       		<div class="col-md-6">
	       			<div style="padding:10px;">
						<%= form_tag("/search", :method => 'get', :enforce_utf8 => false, :class => "navbar-search form-search") do %>
    					<%= text_field_tag(:q, params[:q], :class => "form-control search-query-nav") %>
						<% end %>
					</div>	
        		</div>
        	</div>
        </div>

    </div>
</nav>


<div class="search-wrap center-block">
	<% if @result.size != 0 %>
		<% @result.each do |user| %>
			<div class="search-content">
				<div class="item-image">
					<%= link_to "https://twitter.com/#{user.screen_name}", :target => "_blank" do %>
						<%= image_tag(user.profile_image_url.to_s.sub("_normal", ""), :size => "160x160", :class => "img-rounded")  %>
					<% end %>
				</div>

				<div class="item-description">
					<div class="item-header">
						<%= link_to "https://twitter.com/#{user.screen_name}", :target => "_blank" do %>
							<strong><%= "#{user.name}" %></strong>
						<% end %>
						<em><%= "   @#{user.screen_name}" %></em>
					</div>
					<div class="item-footer">
						<p><%= "Followers: #{user.followers_count}" %></p>
						<p><%= Date.parse(user.created_at.to_s) %></p>
						<% if user.location.present? %>
							<p><%= "GEO: #{user.location}" %></p>
						<% else %>
							<p><%= "GEO: N/A" %></p>
						<% end %>
						<p><%= "Bio: #{user.description}" %></p>
					</div>
				</div>

			</div>
		<% end %>
	<% else %>
		<div class="welcome-tab">
			<p>Oops, seems there is noone matching "<%= @query %>"! </p>
		</div>
	<% end %>

</div>

