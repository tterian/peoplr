<div class="search-wrap center-block">
	<% if @result.size != 0 %>
		<% @result.each do |user| %>
			<div class="search-content">
				<div class="item-header">
					<%= link_to "https://twitter.com/#{user.screen_name}", :target => "_blank" do %>
						<%= image_tag(user.profile_image_url.to_s.sub("_normal", ""), :size => "160x160")  %>
					<% end %>
					<strong><%= link_to("#{user.name}", "https://twitter.com/#{user.screen_name}", :target => "_blank") %></strong>
					<em><%= "@#{user.screen_name}" %></em>
					<em><%= "#{user.followers_count} followers" %></em>
				</div>

				<div>
					<p><%= user.description %></p>
				</div>

			</div>
		<% end %>
	<% else %>
		<div class="search-content">
			<p>Oops, seems there is noone matching "<%= @query %>"! </p>
		</div>
	<% end %>

</div>

