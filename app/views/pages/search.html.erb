<div class="starter-template center-block">
	<h1>Results for <%= @query %></h1>
	<table class="table table-hover">
		<tr>
			<th>Pic</th>
	    	<th>Username</th>
	    	<th>Location</th>
	    	<th>Followers count</th>
	    	<th>Description</th>
		</tr>

		<tr>
		<% @result.each do |user| %>
			<td><%= image_tag(user.profile_image_url) %> </td>
	  		<td><%= user.name %></td>
	  		<td><%= user.location %></td>
	  		<td><%= user.followers_count %></td>
