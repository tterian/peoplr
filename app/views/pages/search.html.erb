<div class="large-6 columns">
	<small>source twitter.com</small>
	<div class="search-content">
	<% if @result.size != 0 %>
		<% @result.each do |user| %>
			<div class="panel radius search-item">

				<div class="item-image">
					<%= link_to "https://twitter.com/#{user.screen_name}", target: "_blank", class: "th [radius]" do %>
						<%= image_tag(user.profile_image_url.to_s.sub("_normal", ""), size: "160x160")  %>
					<% end %>
				</div>

				<div class="item-description">
					<div class="item-header">
						<%= link_to "https://twitter.com/#{user.screen_name}", target: "_blank" do %>
							<strong><%= "#{user.name}" %></strong>
						<% end %>
						<em><%= "   @#{user.screen_name}" %></em>
					</div>
					<div class="item-footer">
						<div class="item-desc">
							<%= evil_icon 'ei-eye', size: :m %>
							<span><%= "#{user.followers_count} followers" %></span>
						</div>

						<div class="item-desc">
							<%= evil_icon 'ei-calendar', size: :m %>
							<span>Account created <%= time_ago_in_words(user.created_at) %> ago</span>
						</div>
						
						<% if user.location.present? %>
							<div class="item-desc">
								<%= evil_icon 'ei-location', size: :m %>
								<span><%= "#{user.location}" %></span>
							</div>
						<% else %>
							<div class="item-desc">
								<%= evil_icon 'ei-location', size: :m %>
								<span><%= "Not available!" %></span>
							</div>
						<% end %>
						<p><%= "#{user.description}" %></p>
					</div>
				</div>

			</div>
		<% end %>

	<% else %>
		<div class="welcome-page">
			<p>Oops, seems there is no one matching "<%= @query %>"! </p>
		</div>
	<% end %>
	</div>
</div>

<div class="large-4 columns">
	<small>related images (source twitter.com)</small>
	<div class="gallery-content">
	<div class="panel radius">
		<div class="slick-carousel">
			<% @images.each do |image| %>
				<div>
					<%= image_tag(image, :height => "160")  %>
				</div>
			<% end %>
		</div>
	</div>
	</div>
</div>


